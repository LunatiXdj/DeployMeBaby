rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // General read access for authenticated users
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow writes to the Baustellendokumentation/Fotos path
    match /Baustellendokumentation/Fotos/{fileName} {
      allow write: if request.auth != null;
    }

    // Allow writes to the site-logs path for project-specific logs
    // Changed to include {logId} subfolder
    match /site-logs/{projectId}/{logId}/{fileName} {
      allow write: if request.auth != null;
    }

    // Allow writes to the articles path for article-specific images
    match /articles/{articleId}/{fileName} {
      allow write: if request.auth != null;
    }

    // Allow writes to the employees path for employee-specific images
    match /employees/{employeeId}/photos/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
